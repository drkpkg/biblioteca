<table class="ui celled table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>ISBN</th>
      <th>Cantidad de copias</th>
      <th>Tipo de libro</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.copies %></td>
        <td><%= book.book_type_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
