<%= form_for :user_type, url: create_user_type_path, html:{class:'ui form'} do |f| %>
  <div class="field">
    <label for="user_type_description">Descripción</label>
    <%= f.text_field :description, placeholder: 'Descripción' %>
  </div>
  <div class="ui buttons">
    <%= link_to 'Cancelar', list_all_path, class: 'ui blue button' %>
    <%= f.submit 'Guardar tipo de dato', class: 'ui green button' %>
  </div>
<% end %>
